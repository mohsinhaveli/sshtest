pipeline {
    agent any
    parameters {
        choice (
      name: 'Env',
      choices: ['DEV', 'QA', 'UAT', 'PROD'],
      description: 'Passing the Environment',
        )
      choice ( 
      name: 'server'
      choices: ['sa', 'sb', 'sc', 'sn'],
      description: 'Pass the server',
      )
    }
    stages {
        stage('Deploying to server') {
             steps {

                 echo "The environment is ${params.Env}"
                 echo "The server is ${params.server}"
                  
             }     
        }
        stage('checking choice 2') {
             steps {
                 echo "The server is ${params.server}"
                  
             }     
        }

    }
}
